<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%=editlisting._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
        <label for="title" class="form-label">Title</label>   
        <input placeholder="Enter Title"  class="form-control"value="<%=editlisting.title%>" name="listing[title]"  type="text" required>
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Enter a valid title</div>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Discription</label>
        <textarea name="listing[description]" class="form-control" required><%=editlisting.description%></textarea>
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Enter a valid short description</div>
    </div>
    
    <div class="mb-3">
        Orignal Listing Image </br>
        <img src="<%= orignalImageURL %>"/>
    </div>
    <div class="mb-3">
    <label for="img" class="form-label">Image URL</label>   
    <input placeholder="Enter Image URL"  class="form-control"  name="listing[image]" type="file">
    <div class="valid-feedback">It looks good!</div>
    </div>

    <div class="row"> 

    <div class="mb-3 col-md-6">
    <label for="price" class="form-label">Price</label> 
    <input type="number"  class="form-control" placeholder="Enter price" name="listing[price]" value="<%=editlisting.price%>" required>
    <div class="valid-feedback">It looks good!</div>
    <div class="invalid-feedback">Enter a valid Price</div>
    </div>

    <div class="mb-3 col-md-6"> 
    <label for="location" class="form-label">Location</label> 
    <input type="text"  class="form-control" placeholder="Enter Location" name="listing[location]" value="<%=editlisting.location%>" required>
    <div class="valid-feedback">It looks good!</div>
    <div class="invalid-feedback">Enter a valid Location</div>
    </div> 

    </div>

    <div class="mb-3">
    <label for="country" class="form-label">Country</label>   
    <input type="text" class="form-control" placeholder="Enter Country" name="listing[country]" value="<%=editlisting.country%>" required>
    <div class="valid-feedback">It looks good!</div>
    <div class="invalid-feedback">Enter a valid Country</div>
    </div>

    <button class="btn btn-dark">Update</button></br>
    </form>
</div>
</div>
