    <div class="listing-card show-card col-md-8 col-lg-6 mb-3 p-0" style="width: 20rem;">
      <h3 class="text-center mt-0"><%= listing.title %></h3>
      
      <!-- Image -->
      <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="show-listing-image">
      
      <!-- Card Body -->
      <div class="card-body">
        <p class="card-text m-0">Owned by :<%= listing.owner ? listing.owner.username : "Owner Missing" %></p>
        <p class="card-text m-0"><%= listing.description %></p>
        <p class="card-text m-0">
          <%= (listing.price !== null && listing.price !== undefined) ? listing.price.toLocaleString("en-IN") : "Price not available" %>
        </p>
        
        <p class="card-text m-0"><%= listing.location %></p>
        <p class="card-text m-0"><%= listing.country %></p>

