<% layout('/layouts/boilerplate') %>

    <h3 class="mb-3 d-flex justify-content-center align-items-center">Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3 d-flex flex-column justify-content-center align-items-start" >
        <label for="title" class="form-label">Title</label>
        <input id="title" placeholder="Enter Title" name="listing[title]" class="form-control form-control-sm w-50" type="text" required >
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Enter valid Title</div>
        </div>

        <div class="mb-3 d-flex flex-column justify-content-center align-items-start" >
        <label for="description" class="form-label">Description</label>
        <textarea placeholder="Talk about the place" name="listing[description]" class="form-control form-control-sm w-50" required></textarea>
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Enter valid Description</div>
        </div>

        <div class="mb-3 d-flex flex-column justify-content-center align-items-start" >
        <label for="img" class="form-label">Image URL</label>
        <input placeholder="Enter Image URL" class="form-control form-control-sm w-50" name="listing[image]" type="file">
        </div>
       
        <div class="mb-3 d-flex flex-column justify-content-center align-items-start" >
        <label for="price" class="form-label">Price</label>   
        <input class="form-control form-control-sm w-50" placeholder="Enter price" name="listing[price]" required>
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Enter valid Price</div>
        </div>

        <div class="mb-3 d-flex flex-column justify-content-center align-items-start" >
        <label for="location" class="form-label">Location</label>      
        <input type="text" class="form-control form-control-sm w-50" placeholder="Enter Location" name="listing[location]" required >
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Location should be valid!</div>
        </div>

        <div class="mb-3 d-flex flex-column justify-content-center align-items-start">
        <label for="country" class="form-label">Country</label>   
        <input type="text" class="form-control form-control-sm w-50" placeholder="Enter Country" name="listing[country]" required>
        <div class="valid-feedback">It looks good!</div>
        <div class="invalid-feedback">Country should be valid!</div>
        </div>

        <button class="btn btn-newlist btn-primary" type="submit">Create</button></br>
    </form>

